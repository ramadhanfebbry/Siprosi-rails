<div class="card">
  <div class="header">
    <h4 class="title">Cetak Blok</h4>
    <p class="category">Here is a subtitle for this table</p>
  </div>
  <div class="content table-responsive table-full-width">
    <table class="table table-striped">
      <thead>
        <th>ID</th>
        <th>Instruksi Produksi</th>              
        <th>Date</th>
        <th>Hasil</th>
        <th>Rusak</th>
        <th>Keterangan</th>     
        <% if current_user.role.eql?("cetak_blok") %>   
        <th>Aksi</th>
        <% end %>
      </thead>
      <tbody>
        <% @cetak_bloks.each do |cetak_blok| %>
        <tr>
          <td><%= cetak_blok.id %></td>
          <td><%= cetak_blok.ip_id %></td>
          <td><%= cetak_blok.created_at.to_date %></td>
          <td><%= cetak_blok.hasil %></td>
          <td><%= cetak_blok.rusak %></td>
          <td><%= cetak_blok.keterangan %></td>
          <% if current_user.role.eql?("cetak_blok") %>   
          <td>
            <%= link_to 'Edit', edit_cetak_blok_path(cetak_blok), class: "btn btn-info btn-fill btn-sm" %>
            </td>
          <% else %>  
          <td>
            <%= link_to 'Tambah Cat Blok', new_cat_blok_path(cetak_blok_id: cetak_blok.id), class: "btn btn-info btn-fill btn-sm" %>
          </td>
          <% end %>
        </tr>              
        <%end%>
      </tbody>
    </table>

  </div>
</div>
