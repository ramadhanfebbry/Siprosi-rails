<div class="card">
  <div class="header">
    <h4 class="title"><%= action_name.titleize %></h4>
  </div>
  <div class="content">
    <%= form_for(@pb) do |f| %>
    <div class="row">
        
        <div class="col-md-12">
            <% if @pb.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pb.errors.count, "error") %> prohibited this pb from being saved:</h2>

      <ul>
      <% @pb.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
        </div>        
      </div>

      <div class="row">
        
        <div class="col-md-6">
          <div class="form-group">
            <label>Rencana Produksi</label>            
            <%= f.select :rp_id, Rp.all.map { |c| [ "RP-#{c.id}", c.id ] }, {}, :class => "form-control border-input", :disabled => (current_user.role.eql?("gudang")) %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Date (DD/MM/YYYY)</label>
            <%= f.text_field :date, :class => "form-control border-input datepicker", :readonly => (current_user.role.eql?("gudang")) %>
          </div>
        </div>
        
      </div>

      <div class="row">
      
        <div class="col-md-6">
          <div class="form-group">
            <label>Status</label>
            <%= f.select :status, ["Belum Konfirmasi", "Konfirmasi"].map { |value| [ value, value ] }, {}, class: "form-control border-input"  %>              
          </div>
        </div>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-info btn-fill btn-wd">Save</button>
      </div>
      <div class="clearfix"></div>
    <% end %>
  </div>
</div>
