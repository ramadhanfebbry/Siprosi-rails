<div class="card">
  <div class="header">
    <h4 class="title"><%= action_name.titleize %></h4>
  </div>
  <div class="content">
    <%= form_for(@user, (@user.new_record? ? {url: manage_users_path, method: :post} : {url: manage_user_path(@user), method: :put})) do |f| %>
    <div class="row">
        
        <div class="col-md-12">
            <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
        </div>        
      </div>

      <div class="row">
        
        <div class="col-md-6">
          <div class="form-group">
            <label>Username</label>            
            <%= f.text_field :username, :class => "form-control border-input" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Password</label>
            <%= f.password_field :password, :class => "form-control border-input" %>            
          </div>
        </div>
        
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Nama</label>
            <%= f.text_field :name, :class => "form-control border-input" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Email</label>
            <%= f.email_field :email, :class => "form-control border-input" %>
          </div>
        </div>
      </div>

      <div class="row">                                            
        <div class="col-md-6">
          <div class="form-group">
            <label>Level</label>
            <%= f.select :role, User::ROLE.map { |value| [ value, value ] }, {}, class: "form-control border-input"  %>              
          </div>
        </div>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-info btn-fill btn-wd">Save</button>
      </div>
      <div class="clearfix"></div>
    <% end %>
  </div>
</div>
