<div class="card">
  <div class="header">
    <h4 class="title"><%= action_name.titleize %></h4>
  </div>
  <div class="content">
    <%= form_for(@hp) do |f| %>
    <div class="row">
        
        <div class="col-md-12">
            <% if @hp.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hp.errors.count, "error") %> prohibited this hp from being saved:</h2>

      <ul>
      <% @hp.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
        </div>        
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Instruksi Produksi</label>
            <%= f.select :ip_id, Ip.all.map { |value| [ key, value ] }, {}, :class => "form-control border-input" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Rencana Produksi</label>            
            <%= f.select :rp_id, Rp.all.map { |value| [ key, value ] }, {}, :class => "form-control border-input" %>
          </div>
        </div>
        
        
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Hasil Produksi</label>
            <%= f.number_field :hasil_produksi, :class => "form-control border-input" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Target Produksi</label>
            <%= f.number_field :target_produksi, :class => "form-control border-input" %>
          </div>
        </div>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-info btn-fill btn-wd">Save</button>
      </div>
      <div class="clearfix"></div>
    <% end %>
  </div>
</div>
