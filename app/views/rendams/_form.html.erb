

<div class="card">
  <div class="header">
    <h4 class="title"><%= action_name.titleize %></h4>
  </div>
  <div class="content">
    <%= form_for(@rendam) do |f| %>
    <div class="row">
        
        <div class="col-md-12">
 <% if @rendam.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rendam.errors.count, "error") %> prohibited this rendam from being saved:</h2>

      <ul>
      <% @rendam.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

        </div>        
      </div>
 <div class="row">
        
        <div class="col-md-6">
          <div class="form-group">
            <label>Schedule Qty</label>            
            <%= number_field_tag :schedule_qty, @rendam.cetak_gtg.ip.pb.rp.schedule_qty, :class => "form-control border-input", disabled: true %>
          </div>
        </div>        
        <div class="col-md-6">
          <div class="form-group">
            <label>Barang</label>
            <br>
            <%= text_field_tag :barang_id, @rendam.cetak_gtg.ip.pb.rp.barang.id_barang, :class => "form-control border-input", disabled: true %>
          </div>
        </div>
        
      </div>

      <div class="row">
      <div class="col-md-6">
          <div class="form-group">
            <label>Keterangan</label>            
            <%= text_field_tag :keterangan, @rendam.cetak_gtg.ip.pb.rp.keterangan, :class => "form-control border-input", disabled: true %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Plan Date (DD/MM/YYYY)</label>
            <%= text_field_tag :plan_date, @rendam.cetak_gtg.ip.pb.rp.plan_date, :class => "form-control border-input", disabled: true %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Cetak Genteng</label>
            <%= f.select :cetak_gtg_id, CetakGtg.all.map { |c| [ c.id, c.id ] }, {}, :class => "form-control border-input", readonly: true %>
          </div>
        </div>    
        
        
        
        <div class="col-md-6">
          <div class="form-group">
            <label>Keterangan</label>
            <%= f.text_field :keterangan, :class => "form-control border-input" %>
          </div>
        </div>
        </div>
        <div class="row">
        
        <div class="col-md-6">
          <div class="form-group">
            <label>Rusak</label>
            <%= f.number_field :rusak, :class => "form-control border-input" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Hasil</label>
            <%= f.number_field :hasil, :class => "form-control border-input" %>
          </div>
        </div>
        </div>
      <div class="text-center">
        <button type="submit" class="btn btn-info btn-fill btn-wd">Save</button>
      </div>
      <div class="clearfix"></div>
    <% end %>
  </div>
</div>
